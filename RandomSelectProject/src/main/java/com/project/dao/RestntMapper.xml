<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.dao.RestntMapper">
	<resultMap type="com.project.domain.RestntDTO" id="RestntDTO">
		<result property="id" column="id" javaType="string" />
		<result property="name" column="name" javaType="string" />
		<result property="latitude" column="latitude" javaType="string" />
		<result property="longitude" column="longitude" javaType="string" />
		<result property="phone" column="phone" javaType="string" />
		<result property="address1" column="address1" javaType="string" />
		<result property="address2" column="address2" javaType="string" />
		<result property="address3" column="address3" javaType="string" />
		<result property="address4" column="address4" javaType="string" />
		<result property="type" column="type" javaType="string" />
	</resultMap>
	
	<select id="getRestntList" resultType="RestntDTO">
		select * from restnt
	</select>
	
	<!--관리자 : 식당 정보 삭제  -->
	<delete id="dropRestntById" parameterType="string">
		delete from restnt where id = #{id}
	</delete>
	
	<!--관리자 : 식당정보 수정  -->
	<update id="setRestntById"  parameterType="RestntDTO">
		update restnt set name = #{name}, latitude = #{latitude}, longitude=#{longitude}, phone=#{phone}, type=#{type}, address1=#{address1}, address2=#{address2}, address3=#{address3}, address4=#{address4} where id = #{id}
	</update>
	
	<!--관리자 : 식당정보 추가  -->
	<insert id="putRestnt" parameterType="RestntDTO">
		
	</insert>
	
	
	<!--관리자: 식당관리 - 주소필터 적용 - 식당 리스트 표시  -->
	<select id="getRestntListByAddr" parameterType="RestntDTO">
	select restntid, restntname from restnt 
	where restntAddress1=#{restntAddress1},
	restntAddress2=#{restntAddress2},
	restntAddress3={restntAddress3},
	restntAddress4=#{restntAddress4}
	</select>
	
	<!--관리자 : 식당관리 - 식당리스트에서 식당선택 - 상세정보 표시  -->
	<select id="getRestntInfoById" parameterType="RestntDTO" resultType="RestntDTO">
	select restntname,
	restntLatitude,restntLongitude,
	restntAddress1,restntAddress2,
	restntAddress3,restntAddress4;
	restntPhone,restntType where restntid=#{restntId}
	</select>
	
	
	
</mapper>