<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.dao.MateMapper">
	
	<!-- 회원 : 친구 리스트 -->
	<select id="getMates" resultType="Mate">
		select * from mate 	where memid=#{abc@gmail.com}
	</select>
	
	<!-- 회원: 친구 아이디 -->
	<select id="getMateId" resultType="Mate">
		select memId from mate where
		memid=#{abc@gmail.com}
	</select>
	
	<!-- 회원: 친구정보 -->
	<select id="getMateInfo" resultType="String">
		select matestatus, infostatus from mate
		where memid=#{abc@gmail.com}
	</select>
	
	
</mapper>
